{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["tsconfig.json"],
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-indent": ["error", 2],
    "@typescript-eslint/indent": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
